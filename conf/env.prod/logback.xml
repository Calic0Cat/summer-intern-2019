<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <timestamp/>
        <pattern>
          <pattern>
            {
            "severity": "%level",
            "logger": "%logger",
            "line": "#asLong{%line}",
            "thread": "%thread",
            "message": "#tryJson{%message}"
            }
          </pattern>
        </pattern>
      </providers>
    </encoder>
  </appender>
  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
  <logger name="mvc.filters.AccessLogFilter" level="info" />
</configuration>
